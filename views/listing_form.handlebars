<div class="container hidden">
    <h1 class="poster-title">Post It Here</h1>
    <div class="row top-30">
        <div class="col m2 col s2">
            <a class="btn btn-light" href="/all_products">Products</a>
        </div>
        <div class="col m2 col s2">
            <a class="btn btn-light" href="/all_categories">Categories</a>
        </div>
    </div>
    <div class="card-panel teal row">
        <div class="col m6 offset-m3">
            <form id="listing">
                <label for="input-image"></label>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Browse</span>
                        <input type="file" />
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload file" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="title"></label>
                    <input placeholder="Enter Name of Product" type="text" class="form-control" id="title">
                    <br />
                    <label for="body"></label>
                    <textarea placeholder="Describe Your Product in Detail" class="form-control" rows="10"
                        id="body"></textarea>
                    <div class="form-group">
                        <label for="category">Select Category:</label>
                        <select class="custom-select" id="categories">
                        </select>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Custom Script -->
<script src="js/listing_form.js" type="text/javascript"></script>